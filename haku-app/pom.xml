                            </classpathDependencyExcludes>
                            <systemProperties>
                                <spring.profiles.active>dev</spring.profiles.active>
                            </systemProperties>
                        </configuration>
                        <executions>
                            <execution>
                                <id>integration-test</id>
                                <goals>
