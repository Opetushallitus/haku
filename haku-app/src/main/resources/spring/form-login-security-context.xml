<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                    http://www.springframework.org/schema/security
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <global-method-security secured-annotations="enabled" pre-post-annotations="enabled"/>

    <http use-expressions="true">
        <intercept-url pattern="/**" access="permitAll"/>
        <form-login login-page="/user/login" login-processing-url="/j_spring_security_check"
                    default-target-url="/user/postLogin"
                    always-use-default-target="true"
                    authentication-failure-url="/login?error=1"/>
        <logout logout-url="/user/logout"/>
    </http>

    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="nobody" password="nobody" authorities="ROLE_NOBODY"/>
                <user name="admin" password="admin" authorities="ROLE_APP_HAKEMUS_CRUD,ROLE_APP_HAKULOMAKKEENHALLINTA_READ_UPDATE,ROLE_APP_HAKULOMAKKEENHALLINTA_CRUD,ROLE_APP_HAKULOMAKKEENHALLINTA_READ"/>
                <user name="master" password="master" authorities="ROLE_APP_HAKULOMAKKEENHALLINTA_CRUD"/>
                <user name="officer" password="officer" authorities="ROLE_APP_HAKEMUS_CRUD"/>
                <user name="kkvirkailija" password="kkvirkailija" authorities="ROLE_APP_HAKEMUS_CRUD,ROLE_APP_HAKEMUS_KKVIRKAILIJA"/>
                <user name="eikkvirkailija" password="eikkvirkailija" authorities="ROLE_APP_HAKEMUS_CRUD"/>
                <user name="opo" password="opo" authorities="ROLE_APP_HAKEMUS_OPO"/>
                <user name="lisatieto" password="lisatieto" authorities="ROLE_APP_HAKEMUS_LISATIETOCRUD"/>
                <user name="heikkve" password="kahdeksan!" authorities="ROLE_APP_HAKEMUS_CRUD"/>
            </user-service>
        </authentication-provider>
    </authentication-manager>
</beans:beans>
