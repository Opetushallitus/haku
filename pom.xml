<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>fi.vm.sade.haku</groupId>
    <artifactId>haku</artifactId>
    <version>7.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Haku :: Parent</name>

    <modules>
        <module>haku-app</module>
    </modules>

    <properties>
        <project.svn.base>https://penaali.hard.ware.fi/svn/generic/${project.artifactId}</project.svn.base>
        <springProfileName>default</springProfileName>
        <junit.version>4.11</junit.version>
        <spring.version>3.2.1.RELEASE</spring.version>
        <spring-security.version>3.1.3.RELEASE</spring-security.version>
        <jersey.version>1.17.1</jersey.version>
        <servlet.version>3.0.1</servlet.version>
        <mongo-driver.version>2.10.1</mongo-driver.version>
        <slf4j.version>1.7.2</slf4j.version>
        <log4j.version>1.2.17</log4j.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <clover.outputDirectory>/data00/atlassian/application-data/bamboo/www/clover_haku</clover.outputDirectory>
        <maven.build.timestamp.format>dd.MM.yyyy HH:mm</maven.build.timestamp.format>
        <buildDate>${maven.build.timestamp}</buildDate>
        <cxf.version>2.7.3</cxf.version>
        <cxf-common-utilities.version>2.5.9</cxf-common-utilities.version>
        <mockito.version>1.9.5</mockito.version>
        <guava.version>15.0</guava.version>
        <ehcache.version>2.4.8</ehcache.version>
        <flapdoodle.version>1.36</flapdoodle.version>
        <org.apache.tomcat.embed>7.0.39</org.apache.tomcat.embed>

        <internal-dependencies.version>${project.version}</internal-dependencies.version>
        <authentication-api.version>${internal-dependencies.version}</authentication-api.version>
        <generic-common.version>${internal-dependencies.version}</generic-common.version>
        <koodisto-api.version>${internal-dependencies.version}</koodisto-api.version>
        <koulutusinformaatio-api.version>${internal-dependencies.version}</koulutusinformaatio-api.version>
        <log-client.version>${internal-dependencies.version}</log-client.version>
        <organisaatio-api.version>${internal-dependencies.version}</organisaatio-api.version>
        <organisaatio-solr-client.version>${internal-dependencies.version}</organisaatio-solr-client.version>
        <tarjonta-api.version>${internal-dependencies.version}</tarjonta-api.version>
        <webapp-portal-decorator.version>${internal-dependencies.version}</webapp-portal-decorator.version>
    </properties>

    <repositories>
        <repository>
            <id>codehaus</id>
            <url>http://repository.codehaus.org/org/codehaus</url>
        </repository>
        <repository>
            <id>oph-sade-artifactory-snapshots</id>
            <url>http://penaali.hard.ware.fi/artifactory/oph-sade-snapshot-local</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>oph-sade-artifactory-releases</id>
            <url>http://penaali.hard.ware.fi/artifactory/oph-sade-release-local</url>
        </repository>
        <repository>
            <id>repository.jboss.org</id>
            <name>JBoss Repository</name>
            <url>http://repository.jboss.org/nexus/content/groups/public-jboss/</url>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>oph-sade-artifactory</id>
            <name>oph-sade-artifactory-releases</name>
            <url>http://penaali.hard.ware.fi/artifactory/oph-sade-release-local</url>
        </repository>
        <snapshotRepository>
            <id>oph-sade-artifactory</id>
            <name>oph-sade-artifactory-snapshots</name>
            <url>http://penaali.hard.ware.fi/artifactory/oph-sade-snapshot-local</url>
        </snapshotRepository>
    </distributionManagement>
</project>
