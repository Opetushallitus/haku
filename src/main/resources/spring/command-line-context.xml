<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd



        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder
            location="classpath:haku.properties, file:///${user.home:''}/oph-configuration/haku.properties"
            ignore-resource-not-found="true"/>

    <context:annotation-config/>
    <context:component-scan base-package="fi.vm.sade.oppija.haku.dao"/>
    <context:component-scan base-package="fi.vm.sade.oppija.haku.service"/>
    <context:component-scan base-package="fi.vm.sade.oppija.haku.event"/>

    <import resource="haku-context.xml"/>

</beans>