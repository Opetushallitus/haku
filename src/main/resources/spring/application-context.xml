<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">

    <context:property-placeholder
            location="classpath:haku.properties, file:///${user.home:''}/oph-configuration/haku.properties"
            ignore-resource-not-found="true"/>
    <mvc:annotation-driven/>

    <context:annotation-config/>
    <context:component-scan base-package="fi.vm.sade.oppija"/>


    <bean id="mongo" class="com.mongodb.Mongo">
        <constructor-arg>
            <bean class="com.mongodb.MongoURI">
                <constructor-arg value="${mongodb.url}"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="db" class="fi.vm.sade.oppija.haku.dao.DBFactoryBean">
        <property name="mongo" ref="mongo"/>
        <property name="name" value="${mongo.db.name}"/>
    </bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
</beans>