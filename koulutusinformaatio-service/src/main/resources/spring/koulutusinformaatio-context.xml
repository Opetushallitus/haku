    <context:component-scan base-package="fi.vm.sade.koulutusinformaatio"/>

    <bean id="HttpSolrServer"
          class="org.apache.solr.client.solrj.impl.HttpSolrServer">
        <constructor-arg>
            <value>${tarjonta.index.url}</value>
        </constructor-arg>
    </bean>

    <bean id="searchFilters" class="fi.vm.sade.koulutusinformaatio.domain.search.SearchFilters">
        <constructor-arg ref="searchService"/>
    </bean>

    <bean id="tarjontaClient" class="fi.vm.sade.koulutusinformaatio.client.TarjontaClientRESTImpl"/>
    <bean id="solrClient" class="fi.vm.sade.koulutusinformaatio.client.SolrClient"/>

    <bean id="searchService" class="fi.vm.sade.koulutusinformaatio.service.impl.SearchServiceSolrImpl">
        <constructor-arg ref="HttpSolrServer"/>
    </bean>

    <bean id="indexService" class="fi.vm.sade.koulutusinformaatio.service.impl.IndexerServiceXSLTImpl">
        <constructor-arg>
            <ref bean="HttpSolrServer"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="tarjontaClient"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="solrClient"/>
        </constructor-arg>
    </bean>

    <bean id="applicationOptionServiceSolrImpl" class="fi.vm.sade.koulutusinformaatio.service.impl.ApplicationOptionServiceSolrImpl">
        <constructor-arg ref="searchService"/>
    </bean>

    <bean id="morphia" class="com.google.code.morphia.Morphia" />

    <bean id="learningOpportunityParentDAO" class="fi.vm.sade.koulutusinformaatio.dao.LearningOpportunityParentDAO">
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg value="${mongodb.url}"/>
    </bean>

    <bean id="applicationOptionDAO" class="fi.vm.sade.koulutusinformaatio.dao.ApplicationOptionDAO">
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg value="${mongodb.url}"/>
    </bean>

    <bean id="modelMapper" class="org.modelmapper.ModelMapper"/>
</beans>